<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.springframework.android.showcase"
      android:versionCode="1"
      android:versionName="1.0">

	<uses-sdk android:minSdkVersion="9"></uses-sdk>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    
    <application android:label="@string/app_name">
        
        <activity 
        	android:name=".MainActivity"
			android:label="@string/app_name">	
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".rest.GoogleSearchActivity" />
		<activity android:name=".rest.HttpGetActivity" />
		<activity android:name=".rest.HttpGetJsonActivity" />
		<activity android:name=".rest.HttpGetXmlActivity" />
		<activity android:name=".rest.HttpGetParametersActivity" />
        <activity android:name=".rest.HttpPostActivity" />
        <activity android:name=".rest.HttpPostStringActivity" />
        <activity android:name=".rest.HttpPostJsonXmlActivity" />
		<activity android:name=".rest.HttpPostMultiValueMapActivity" />
       	<activity android:name=".rest.rome.RssActivity" />
        <activity android:name=".rest.rome.RssChannelActivity" />
        <activity android:name=".rest.rome.RssSyndFeedActivity" />
       	<activity android:name=".rest.rome.AtomActivity" />
        <activity android:name=".rest.rome.AtomFeedActivity" />
     	<activity android:name=".rest.rome.AtomSyndFeedActivity" />
     	
     	<activity
        	android:name=".social.twitter.TwitterWebOAuthActivity"  
        	android:noHistory="true"
        	android:excludeFromRecents="true" />
        
        <activity 
        	android:name=".social.twitter.TwitterActivity">
        	<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="x-org-springsource-android-showcase" android:host="twitter-oauth-response" />
			</intent-filter>
        </activity>
        
        <activity android:name=".social.twitter.TwitterProfileActivity" />
        <activity android:name=".social.twitter.TwitterTimelineActivity" />
        <activity android:name=".social.twitter.TwitterTweetActivity" />
        <activity android:name=".social.twitter.TwitterDirectMessageActivity" />

     	<activity
        	android:name=".social.facebook.FacebookWebOAuthActivity"  
        	android:noHistory="true"
        	android:excludeFromRecents="true" />

        <activity android:name=".social.facebook.FacebookActivity" />
        <activity android:name=".social.facebook.FacebookProfileActivity" />
        <activity android:name=".social.facebook.FacebookHomeFeedActivity" />
		<activity android:name=".social.facebook.FacebookWallPostActivity" />
        	
    </application>

</manifest> 
